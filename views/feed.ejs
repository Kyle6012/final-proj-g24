<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Feed</title>
  <link rel="stylesheet" href="/css/feed.ejs.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/feed.js"></script>
  <script src="/js/theme.js"></script>
  <style>
    /* Notification system */
    #notification-container {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 9999;
      max-width: 300px;
    }
    
    .notification {
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      animation: slideIn 0.3s ease-out forwards;
      opacity: 0;
      transform: translateX(100%);
    }
    
    .notification.error {
      background-color: #ffebee;
      border-left: 4px solid #f44336;
      color: #d32f2f;
    }
    
    .notification.success {
      background-color: #e8f5e9;
      border-left: 4px solid #4caf50;
      color: #2e7d32;
    }
    
    .notification.warning {
      background-color: #fff8e1;
      border-left: 4px solid #ffc107;
      color: #ff8f00;
    }
    
    @keyframes slideIn {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    @keyframes slideOut {
      to {
        opacity: 0;
        transform: translateX(100%);
      }
    }
    
    /* Comment preview styles */
    .post-comments-preview {
      margin-top: 10px;
      padding: 8px;
      background-color: #f8f8f8;
      border-radius: 5px;
    }
    
    .comment-preview {
      padding: 5px 0;
      position: relative;
    }
    
    .preview-delete-btn {
      position: absolute;
      right: 5px;
      top: 5px;
      background: none;
      border: none;
      color: #ff4d4d;
      font-size: 16px;
      cursor: pointer;
      padding: 0 5px;
      opacity: 0.7;
    }
    
    .preview-delete-btn:hover {
      opacity: 1;
    }
    
    .more-comments {
      text-align: center;
      font-size: 0.9em;
      color: #666;
      margin-top: 5px;
    }
    
    /* Delete button styles */
    .delete-btn {
      background-color: #ff4d4d;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
    }
    
    .delete-comment-btn {
      background-color: #ff4d4d;
      color: white;
      border: none;
      padding: 3px 8px;
      border-radius: 3px;
      font-size: 0.8em;
      cursor: pointer;
      margin-top: 5px;
    }
  </style>
</head>
<body class="light-mode">
  <%- include('partials/navbar') %>
  
  <!-- Notification container -->
  <div id="notification-container"></div>

  <div class="main-container">
    <div class="post-container">
      <h3>Feed</h3>
      <h2>Welcome, <%= user.fullname %></h2>
      <a href="/feed/create">Create Post</a>

      <% if (posts.length === 0) { %>
        <div class="no-posts">
          <p>No posts yet. Be the first to create one!</p>
        </div>
      <% } %>

      <% posts.forEach(post => { %>
      <div class="post" id="post-<%= post.id %>">
        <div class="post-header">
          <a href="/profile/<%= post.User.username %>" class="post-user-info">
            <img src="<%= post.User.profilePic || '/images/default.png' %>" alt="profile picture" class="post-user-pic">
            <span class="post-username"><%= post.User.username %></span>
          </a>
          <span class="post-time"><%= new Date(post.createdAt).toLocaleDateString() %></span>
        </div>

        <div class="post-content">
          <% if (post.title) { %>
            <h3 class="post-title"><%= post.title %></h3>
          <% } %>
          <p class="post-text"><%= post.content %></p>
          
          <% if (post.linkPreview) { %>
            <% if (post.linkPreview.type === 'youtube') { %>
              <div class="video-preview">
                <div class="video-container">
                  <iframe src="<%= post.linkPreview.embedUrl %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
              </div>
            <% } else if (post.linkPreview.type === 'link') { %>
              <a href="<%= post.linkPreview.url %>" target="_blank" rel="noopener noreferrer" class="link-preview">
                <% if (post.linkPreview.image) { %>
                  <div class="preview-image-container">
                    <img src="<%= post.linkPreview.image %>" alt="Preview image" class="preview-image" onerror="this.style.display='none'">
                  </div>
                <% } %>
                <div class="preview-details">
                  <% if (post.linkPreview.siteName) { %>
                    <span class="preview-site"><%= post.linkPreview.siteName %></span>
                  <% } %>
                  <% if (post.linkPreview.title) { %>
                    <h4 class="preview-title"><%= post.linkPreview.title %></h4>
                  <% } %>
                  <% if (post.linkPreview.description) { %>
                    <p class="preview-description"><%= post.linkPreview.description %></p>
                  <% } %>
                </div>
              </a>
            <% } %>
          <% } else if (post.mediaType === "image") { %>
            <img src="<%= post.mediaUrl %>" alt="<%= post.title %>" class="post-media">
          <% } else if (post.mediaType === "pdf") { %>
            <a href="<%= post.mediaUrl %>" target="_blank" class="post-media-link">View Document Shared</a>
          <% } %>
        </div>

        <div class="post-actions">
          <button type="button" class="like-button" data-post-id="<%= post.id %>">
            <i class="fas fa-thumbs-up"></i>
            <span id="like-count-<%= post.id %>"><%= post.likeCount || 0 %></span>
          </button>

          <% if (post.userId === user.id) { %>
            <a href="/feed/edit/<%= post.id %>" class="edit-btn">Edit</a>
            <button type="button" class="delete-btn" data-post-id="<%= post.id %>">Delete</button>
          <% } %>

          <button type="button" class="view-comments-btn" data-post-id="<%= post.id %>">
            <i class="fas fa-comments"></i> 
            Comments 
            <% if (post.Comments && post.Comments.length > 0) { %>
              <span class="comment-count">(<%= post.Comments.length %>)</span>
            <% } %>
          </button>
        </div>

        <!-- Show a few recent comments under the post -->
        <% if (post.Comments && post.Comments.length > 0) { %>
          <div class="post-comments-preview">
            <% const recentComments = post.Comments.slice(-2); %>
            <% recentComments.forEach(comment => { %>
              <div class="comment-preview" data-comment-id="<%= comment.id %>">
                <strong><%= comment.User.username %>:</strong>
                <span><%= comment.content %></span>
                <% if (comment.userId === user.id) { %>
                  <button type="button" class="preview-delete-btn" data-comment-id="<%= comment.id %>">×</button>
                <% } %>
              </div>
            <% }); %>
            <% if (post.Comments.length > 2) { %>
              <div class="more-comments">+<%= post.Comments.length - 2 %> more comments</div>
            <% } %>
          </div>
        <% } %>
      </div>
      <% }); %>
    </div>
  </div>

  <!-- Comments Modal -->
  <div id="commentsModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h3 class="modal-title">Comments</h3>
      <div id="commentsContent"></div>
      <form id="modalCommentForm">
        <textarea id="modalCommentInput" placeholder="Leave a comment..." required></textarea>
        <button type="submit">Comment</button>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const socket = io({ withCredentials: true });
      let currentPostId = null;
      
      // Notification system
      const showNotification = (message, type = 'error', duration = 5000) => {
          const container = document.getElementById('notification-container');
          const notification = document.createElement('div');
          notification.className = `notification ${type}`;
          notification.textContent = message;
          
          container.appendChild(notification);
          
          // Auto-remove after duration
          setTimeout(() => {
              notification.style.animation = 'slideOut 0.3s ease-in forwards';
              setTimeout(() => {
                  container.removeChild(notification);
              }, 300);
          }, duration);
      };
      
      // Add event listeners for post delete buttons
      document.querySelectorAll('.delete-btn').forEach(button => {
          button.addEventListener('click', function() {
              const postId = this.getAttribute('data-post-id');
              if (confirm('Are you sure you want to delete this post?')) {
                  socket.emit('deletePost', postId);
              }
          });
      });
      
      // Add event listeners for comment preview delete buttons
      document.querySelectorAll('.preview-delete-btn').forEach(button => {
          button.addEventListener('click', function(e) {
              e.stopPropagation(); // Prevent opening the comments modal
              const commentId = this.getAttribute('data-comment-id');
              if (confirm('Are you sure you want to delete this comment?')) {
                  socket.emit('deleteComment', commentId);
              }
          });
      });

      // Store all posts data from initial page render
      const postsData = <%- JSON.stringify(posts) %>;

      // Open comments modal
      document.querySelectorAll('.view-comments-btn').forEach(button => {
          button.addEventListener('click', function() {
              currentPostId = this.getAttribute('data-post-id');
              document.getElementById('commentsModal').style.display = 'block';
              loadComments(currentPostId);
          });
      });

      // Close modal when clicking X
      document.querySelector('.close').addEventListener('click', function() {
          document.getElementById('commentsModal').style.display = 'none';
      });

      // Close modal when clicking outside
      window.addEventListener('click', function(event) {
          if (event.target === document.getElementById('commentsModal')) {
              document.getElementById('commentsModal').style.display = 'none';
          }
      });

      // Create error message display in modal
      const createErrorDisplay = () => {
          let errorDisplay = document.getElementById('commentErrorDisplay');
          if (!errorDisplay) {
              errorDisplay = document.createElement('div');
              errorDisplay.id = 'commentErrorDisplay';
              errorDisplay.className = 'error-message';
              errorDisplay.style.display = 'none';
              errorDisplay.style.color = '#ff4d4d';
              errorDisplay.style.marginBottom = '10px';
              errorDisplay.style.padding = '5px';
              errorDisplay.style.borderRadius = '3px';
              errorDisplay.style.backgroundColor = '#fff0f0';
              
              const commentForm = document.getElementById('modalCommentForm');
              commentForm.parentNode.insertBefore(errorDisplay, commentForm);
          }
          return errorDisplay;
      };
      
      // Show error message
      const showErrorMessage = (message) => {
          const errorDisplay = createErrorDisplay();
          errorDisplay.textContent = message;
          errorDisplay.style.display = 'block';
          
          // Auto-hide after 5 seconds
          setTimeout(() => {
              errorDisplay.style.display = 'none';
          }, 5000);
      };
      
      // Handle error messages from socket
      socket.on('errorMessage', (data) => {
          if (data.type === 'content_violation') {
              showNotification(data.message, 'warning');
              showErrorMessage(data.message);
          } else if (data.type === 'screening_error') {
              showNotification(data.message, 'error');
              showErrorMessage(data.message);
          } else {
              console.error('Socket error:', data.message);
              showNotification('An error occurred. Please try again.', 'error');
          }
      });
      
      // Handle successful operations
      socket.on('postDeleted', (postId) => {
          showNotification('Post deleted successfully', 'success', 3000);
      });
      
      socket.on('commentDeleted', (data) => {
          showNotification('Comment deleted successfully', 'success', 3000);
      });
      
      socket.on('commentSuccess', (data) => {
          showNotification('Comment posted successfully', 'success', 3000);
      });
      
      // Handle comment submission
      document.getElementById('modalCommentForm').addEventListener('submit', function(e) {
          e.preventDefault();
          const content = document.getElementById('modalCommentInput').value.trim();
          if (content && currentPostId) {
              // Show loading state
              const submitBtn = this.querySelector('button[type="submit"]');
              const originalText = submitBtn.textContent;
              submitBtn.textContent = 'Sending...';
              submitBtn.disabled = true;
              
              socket.emit('sendComment', { 
                  postId: currentPostId, 
                  content 
              });
              
              // Reset form
              document.getElementById('modalCommentInput').value = '';
              
              // Reset button after a short delay
              setTimeout(() => {
                  submitBtn.textContent = originalText;
                  submitBtn.disabled = false;
              }, 1000);
          }
      });

      // Handle new comments from socket
      socket.on('newComment', (data) => {
          if (data.postId == currentPostId) {
              addCommentToModal(data.comment);
          }
          
          // Update the post comment count in the UI
          const commentBtn = document.querySelector(`.view-comments-btn[data-post-id="${data.postId}"]`);
          if (commentBtn) {
              const commentCountElem = commentBtn.querySelector('.comment-count');
              if (commentCountElem) {
                  const currentCount = parseInt(commentCountElem.textContent.replace(/[()]/g, '')) || 0;
                  commentCountElem.textContent = `(${currentCount + 1})`;
              } else {
                  const newCountElem = document.createElement('span');
                  newCountElem.className = 'comment-count';
                  newCountElem.textContent = '(1)';
                  commentBtn.appendChild(newCountElem);
              }
          }
          
          // Add comment to preview if it exists
          const postElement = document.getElementById(`post-${data.postId}`);
          if (postElement) {
              let previewSection = postElement.querySelector('.post-comments-preview');
              if (!previewSection) {
                  previewSection = document.createElement('div');
                  previewSection.className = 'post-comments-preview';
                  postElement.appendChild(previewSection);
              }
              
              // Add the new comment to preview
              const commentPreview = document.createElement('div');
              commentPreview.className = 'comment-preview';
              // Set comment ID as attribute for easy deletion
              commentPreview.setAttribute('data-comment-id', data.comment.id);
              
              // Check if the current user is the comment owner
              const isCommentOwner = data.comment.userId === '<%= user.id %>';
              
              commentPreview.innerHTML = `
                  <strong>${data.comment.User.username}:</strong>
                  <span>${data.comment.content}</span>
                  ${isCommentOwner ? `<button type="button" class="preview-delete-btn" data-comment-id="${data.comment.id}">×</button>` : ''}
              `;
              previewSection.appendChild(commentPreview);
              
              // Add event listener for delete button if present
              const deleteBtn = commentPreview.querySelector('.preview-delete-btn');
              if (deleteBtn) {
                  deleteBtn.addEventListener('click', function(e) {
                      e.stopPropagation(); // Prevent opening the comments modal
                      const commentId = this.getAttribute('data-comment-id');
                      if (confirm('Are you sure you want to delete this comment?')) {
                          socket.emit('deleteComment', commentId);
                      }
                  });
              }
          }
      });
      
      // Handle deleted comments
      socket.on('commentDeleted', (data) => {
          const { commentId, postId } = data;
          
          // Remove from modal if open
          if (currentPostId == postId) {
              const commentElement = document.querySelector(`.comment[data-comment-id="${commentId}"]`);
              if (commentElement) {
                  commentElement.remove();
              }
          }
          
          // Update comment count
          const commentBtn = document.querySelector(`.view-comments-btn[data-post-id="${postId}"]`);
          if (commentBtn) {
              const commentCountElem = commentBtn.querySelector('.comment-count');
              if (commentCountElem) {
                  const currentCount = parseInt(commentCountElem.textContent.replace(/[()]/g, '')) || 0;
                  if (currentCount > 1) {
                      commentCountElem.textContent = `(${currentCount - 1})`;
                  } else {
                      commentCountElem.remove();
                  }
              }
          }
          
          // Remove from preview if exists
          const postElement = document.getElementById(`post-${postId}`);
          if (postElement) {
              const commentPreview = postElement.querySelector(`.comment-preview[data-comment-id="${commentId}"]`);
              if (commentPreview) {
                  commentPreview.remove();
              }
          }
      });
      
      // Handle deleted posts
      socket.on('postDeleted', (postId) => {
          const postElement = document.getElementById(`post-${postId}`);
          if (postElement) {
              // Animate removal
              postElement.style.transition = 'opacity 0.5s ease';
              postElement.style.opacity = '0';
              
              setTimeout(() => {
                  postElement.remove();
                  
                  // Check if there are no more posts
                  const remainingPosts = document.querySelectorAll('.post');
                  if (remainingPosts.length === 0) {
                      const feedContainer = document.querySelector('.feed-container');
                      const noPostsMessage = document.createElement('div');
                      noPostsMessage.className = 'no-posts';
                      noPostsMessage.innerHTML = '<p>No posts yet. Be the first to create one!</p>';
                      feedContainer.appendChild(noPostsMessage);
                  }
              }, 500);
          }
          
          // Close modal if it's open for this post
          if (currentPostId == postId) {
              document.getElementById('commentsModal').style.display = 'none';
              currentPostId = null;
          }
      });

      // Handle likes
      document.querySelectorAll('.like-button').forEach(button => {
          button.addEventListener('click', function() {
              const postId = this.getAttribute('data-post-id');
              socket.emit('likePost', postId);
          });
      });

      // Update like count
      socket.on('newLike', (data) => {
          const likeCountElem = document.getElementById('like-count-' + data.postId);
          if (likeCountElem) {
              likeCountElem.textContent = data.likeCount;
          }
      });

      // Load comments for a post from preloaded data
      function loadComments(postId) {
          const post = postsData.find(p => p.id == postId);
          const commentsContent = document.getElementById('commentsContent');
          commentsContent.innerHTML = '';
          
          if (!post || !post.Comments || post.Comments.length === 0) {
              commentsContent.innerHTML = '<p class="no-comments">No comments yet.</p>';
              return;
          }
          
          // Comments are already sorted by the backend
          post.Comments.forEach(comment => {
              addCommentToModal(comment);
          });
      }

      // Add a comment to the modal
      function addCommentToModal(comment) {
          const commentsContent = document.getElementById('commentsContent');
          const noCommentsMsg = commentsContent.querySelector('.no-comments');
          
          if (noCommentsMsg) {
              noCommentsMsg.remove();
          }
          
          const commentDiv = document.createElement('div');
          commentDiv.className = 'comment';
          commentDiv.setAttribute('data-comment-id', comment.id);
          commentDiv.innerHTML = `
              <div class="comment-user-info">
                  <img src="${comment.User.profilePic || '/images/default.png'}" class="comment-user-pic">
                  <span class="comment-username">${comment.User.username}</span>
              </div>
              <p class="comment-text">${comment.content}</p>
              <small class="comment-time">${new Date(comment.createdAt).toLocaleString()}</small>
              ${comment.userId === '<%= user.id %>' ? `
                  <button type="button" class="delete-comment-btn" data-comment-id="${comment.id}">Delete</button>
              ` : ''}
          `;
          
          commentsContent.appendChild(commentDiv);
          
          // Add event listener for delete button
          const deleteBtn = commentDiv.querySelector('.delete-comment-btn');
          if (deleteBtn) {
              deleteBtn.addEventListener('click', function() {
                  const commentId = this.getAttribute('data-comment-id');
                  if (confirm('Are you sure you want to delete this comment?')) {
                      socket.emit('deleteComment', commentId);
                  }
              });
          }
      }
    });
  </script>
</body>
</html>