# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication & Sessions (Required)
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Database Configuration (Required)
# Production: Use DATABASE_URL from Neon DB
# Local Development: Use individual DB variables below
DATABASE_URL=postgresql://user:password@host.neon.tech:5432/dbname?sslmode=require

# Local Database (optional, only for local development)
DB_NAME=g24sec
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432

# Pusher Configuration (Required for Real-Time Features)
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=your_pusher_cluster

# Cron Jobs (Required for Vercel)
CRON_SECRET=your_cron_secret_here

# ImageKit Configuration (Required for Image Uploads)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_endpoint

# AI Configuration (Optional - for AI chat features)
HUGGINGFACE_API_KEY=your_huggingface_api_key
HUGGINGFACE_MODEL=meta-llama/Llama-3.2-3B-Instruct
CYBERSECBERT_MODEL=dslim/bert-base-NER

# Content Moderation (Optional - for automated content screening)
PERSPECTIVE_API_KEY=your_perspective_api_key

# News API (Optional - for cyber security alerts)
NEWS_API_KEY=your_newsapi_key
